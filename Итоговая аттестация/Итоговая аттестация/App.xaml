<Application x:Class="Итоговая_аттестация.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:Итоговая_аттестация.ViewModel"
             xmlns:view="clr-namespace:Итоговая_аттестация"
             StartupUri="View\MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style\Brush.xaml"/>
                <ResourceDictionary Source="Style\Button.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewModel:MainWindowViewModel}">
                <view:MainWindow/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
